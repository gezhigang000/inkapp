{
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [{ "path": "$TEMP/**" }, { "path": "$HOME/**" }]
    },
    "dialog:allow-open",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "python-sidecar",
          "cmd": "/usr/bin/python3",
          "args": [{ "validator": ".*sidecar_main\\.py$" }]
        },
        {
          "name": "python-sidecar",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-stdin-write"
  ]
}
